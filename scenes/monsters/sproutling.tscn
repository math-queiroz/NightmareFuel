resource_name = "MonsterSproutling"
script/source = "extends Monster

func _ready() -> void:
	$Speech.hide()
	arrive()

func arrive() -> void:
	$AnimationPlayer.play(\"entrance\")
	$AnimationPlayer.connect(\"animation_changed\", _on_animation_changed)
	$AnimationPlayer.queue(\"idle\")

func depart() -> void:
	$AnimationPlayer.play(\"fade\")

func say(text: String = request) -> void:
	$Speech/RichTextLabel.set_text(text)
	$Speech.show()

func _on_animation_changed(_arg1, _arg2):
	say(request)

func on_correct_deliver() -> void:
	print_debug(\"Sproutling is happy\")
	depart()

func on_wrong_deliver() -> void:
	print_debug(\"Sproutling hates you\")
	depart()

func _on_timeout() -> void:
	depart()
"

